DEVPORTS_PROJECT_NAME=social-tracker

# Database (for webapp running on host)
DATABASE_URL=postgresql://postgres:postgres@localhost:{devports:postgres:db}/social_tracker

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:{devports:app:web}

# ============================================
# API Keys - REQUIRED
# ============================================

# Anthropic API key for Claude CLI (REQUIRED for Ralph)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Reddit API credentials (REQUIRED for fetching posts)
# Create a "script" type app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=

# Groq API key for LLM tag suggestions
# Get from: https://console.groq.com/
GROQ_API_KEY=

# ============================================
# Git/GitHub - REQUIRED for Ralph to push
# ============================================

# GitHub Personal Access Token (fine-grained recommended)
# Create at: https://github.com/settings/tokens?type=beta
# Required scope: Contents (read/write) for this repo only
GITHUB_TOKEN=

# Git author info for Ralph's commits
GIT_AUTHOR_NAME=Ralph
GIT_AUTHOR_EMAIL=ralph@localhost
GIT_COMMITTER_NAME=Ralph
GIT_COMMITTER_EMAIL=ralph@localhost
