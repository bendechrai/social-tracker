# Ralph Runner
# Sandboxed environment for autonomous Claude Code execution

FROM node:22-slim

# Install dependencies including gosu for privilege dropping
RUN apt-get update && apt-get install -y \
    git \
    curl \
    ca-certificates \
    gosu \
    && rm -rf /var/lib/apt/lists/*

# Install Claude CLI
RUN npm install -g @anthropic-ai/claude-code

# Create non-root user
RUN useradd -m -s /bin/bash ralph

# Copy entrypoint script
COPY entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

WORKDIR /home/ralph/project

# Git config for ralph user (will be overridden by env vars if set)
RUN gosu ralph git config --global user.email "ralph@localhost" \
    && gosu ralph git config --global user.name "Ralph"

# Entry point handles permission fixes and drops to ralph
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
CMD ["/bin/bash"]
