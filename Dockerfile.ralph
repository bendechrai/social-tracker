# Ralph Runner
# Sandboxed environment for autonomous Claude Code execution

FROM node:22-slim

# Install dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install Claude CLI
RUN npm install -g @anthropic-ai/claude-code

# Create non-root user
RUN useradd -m -s /bin/bash ralph
USER ralph
WORKDIR /home/ralph/project

# Git config (will be overridden by env vars if set)
RUN git config --global user.email "ralph@localhost" \
    && git config --global user.name "Ralph"

# Entry point is the loop script
ENTRYPOINT ["/bin/bash"]
